<Window x:Class="DEMOex.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEMOex"
        mc:Ignorable="d" MinHeight="500" MinWidth="1000"
        Title="MainWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource MainGreen}"/>

        <Frame Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden">

        </Frame>

        <Grid Grid.Row="2" Background="{StaticResource MainGreen}"/>

    </Grid>
</Window>
